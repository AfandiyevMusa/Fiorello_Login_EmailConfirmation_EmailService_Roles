@model CategoryCreateVM



<div class="container my-5">
    <div class="row">
        <form method="post" asp-action="Create">
            <textarea id="category-name" asp-for=Name class="form-control"></textarea>
            <input type="text" asp-for=Name class="form-control" />
            <span class="text-danger d-block" asp-validation-for=Name></span>
            <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3 d-inline-block">Submit</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3 d-inline-block">Back</a>
        </form>
    </div>
</div>

@section AdminScripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>CKEDITOR.replace("category-name");</script>
}